<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
    <div class="navbar">
        <h1>Video Gallery</h1>
    </div>

    <div class="gallery-container">
        <% videos.forEach(video => { %>
            <div class="video-card">
                <video id="video-<%= video %>" class="video" preload="metadata">
                    <source src="/videos/<%= video %>" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                <div class="controls">
                    <button class="play-btn"><i class="bi bi-play-fill"></i></button>
                    <button class="mute-btn"><i class="bi bi-volume-up"></i></button>
                    <button class="maximize-btn"><i class="bi bi-arrows-fullscreen"></i></button>
                    <button class="minimize-btn" style="display: none;"><i class="bi bi-fullscreen-exit"></i></button>
                    <input type="range" class="volume-slider" min="0" max="1" step="0.1" value="1">
                </div>
            </div>
        <% }) %>
    </div>

    <script src="/js/gallery.js"></script>
</body>
</html>
