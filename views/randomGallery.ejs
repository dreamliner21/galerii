<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random Video Gallery</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
    <div class="gallery-container">
        <% randomVideos.forEach(video => { %>
            <div class="video-card">
                <video class="video" src="/videos/<%= video %>" controls></video>
                <div class="controls">
                    <button class="play-btn"><i class="bi bi-play-fill"></i></button>
                    <button class="mute-btn"><i class="bi bi-volume-up"></i></button>
                    <button class="maximize-btn"><i class="bi bi-arrows-fullscreen"></i></button>
                    <button class="minimize-btn" style="display: none;"><i class="bi bi-fullscreen-exit"></i></button>
                </div>
            </div>
        <% }) %>
    </div>

    <script src="/js/randgallery.js"></script>
</body>
</html>
